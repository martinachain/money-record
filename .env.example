# 数据库连接 URL (PostgreSQL)
# Zeabur 会自动注入此变量
DATABASE_URL="postgresql://user:password@host:5432/database"

# Node 环境
NODE_ENV="production"

# 端口 (Zeabur 会自动设置)
PORT=3001

# Clerk 认证配置
# 从 https://dashboard.clerk.com 获取
CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# 前端环境变量（Vite）
VITE_CLERK_PUBLISHABLE_KEY="pk_test_..."
